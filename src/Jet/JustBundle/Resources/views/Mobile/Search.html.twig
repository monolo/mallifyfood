<body> 

<!-- Start of first page: #one -->
<div data-role="page" id="results">

	<div data-role="header">
		<h1>Mallify Food</h1>
	</div><!-- /header -->

	<div data-role="content" id="home">	
		<h2>Resultados de la búsqueda</h2>
					<ul data-role="listview">
		{% for restaurant in results %}
			<li><a href="{{ path('restaurant',{ 'restaurant' : restaurant.path }) }}">
				<img src="http://just-eat.es/{{ restaurant.image }}" />
				<h3>{{ restaurant.title }}</h3>
				<p>{{ restaurant.location }}</p>
				</li>
			
		{% endfor %}
		</ul>

</div>	

    				<div class="ui-block-b"><a data-role="button" data-theme="a" data-direction="reverse" href="{{ path('home') }}">Volver</a></div>


	</div><!-- /content -->
	
	
<div data-role="footer" data-position="fixed">
		<div data-role="navbar">
			<ul>
				<li><a href="#home" data-icon="grid" class="ui-btn-active">Explorar</a></li>
				<li><a href="favs" data-role="button" data-icon="star">Favoritos</a></li>
				<li><a href="#setup" data-icon="gear">Ajustes</a></li>
			</ul>
		</div><!-- /navbar -->
	</div><!-- /footer -->
	
</div><!-- /page one -->

<!-- Start of third page: #popup -->
<div data-role="page" id="setup">

	<div data-role="header">
		<h1>Ajustes</h1>
	</div><!-- /header -->

	<div data-role="content" >	
		<h2>Localización</h2>
		<p>Cambie su ubicación:</p> 
			
		<p><a href="#home" data-rel="back" data-role="button" data-inline="true" data-icon="back">Aceptar</a></p>	
	</div><!-- /content -->
	
<div data-role="footer" data-position="fixed">
		<div data-role="navbar">
			<ul>
				<li><a href="#home" data-icon="grid" data-direction="reverse" >Explorar</a></li>
				<li><a href="favs.html" data-role="button" data-icon="star">Favoritos</a></li>
				<li><a href="#setup" data-icon="gear" class="ui-btn-active">Ajustes</a></li>
			</ul>
		</div><!-- /navbar -->
	</div><!-- /footer -->
	
</div><!-- /page popup -->

</body>
</html>
